@model IEnumerable<PrefeituraModel>

@{
    ViewData["title"] = "Lista de Prefeituras";
}

<h2 class="text-center my-4 display-3">Lista de Prefeituras</h2>

<a class="btn btn-primary my-2" asp-controller="Prefeitura" asp-action="Cadastrar" role="button">Cadastro de Prefeitura</a>

<div class="table-responsive id=br1"></div>
<table class="table table-hover table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Município</th>
            <th scope="col">Nome</th>
            <th scope="col">E-mail</th>
            <th scope="col">Telefone</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (PrefeituraModel item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Municipio</td>
                    <td>@item.NomeRH</td>
                    <td>@item.EmailRH</td>
                    <td>@item.TelefoneRH</td>
                    <div class="btn-group" role="group">
                        <a role="button" class="btn btn-primary">Editar</a>
                        <a role="button" class="btn btn-danger">Excluir</a>
                    </div>
                </tr>
            }
        }  
    </tbody>
</table>