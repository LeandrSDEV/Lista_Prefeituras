@model LoginModel

@{
    Layout = "_LayoutDeslogado";
    ViewData["title"] = "Login";
}

<h2 class="text-center my-4 display-3">Login</h2>

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-center" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<form asp-controller="Login" asp-action="Entrar" method="post">

    <div class="form-group mt-2">
        <label for="Login">Login</label>
        <input type="text" class="form-control" asp-for="Login" placeholder="Digíte o login">
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <div class="form-group mt-2">
        <label for="Senha">Senha</label>
        <input type="password" class="form-control" asp-for="Senha" placeholder="Digíte a senha">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>
    
    <button type="submit" class="btn btn-success mt-2 w-100">Entrar</button>
</form>